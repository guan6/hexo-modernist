#footer
  width page-width
  margin 20px auto 0
  padding 20px 0 0
  font-size 0.875em
  color #ccc
  overflow hidden
  text-align center

  a
    color #fff
    font-style italic

#gotop
  position fixed
  right 10px
  bottom 10px
  width 45px
  height 45px
  border-radius 5px
  background #1e1e1e
  opacity 0.6
  cursor pointer

  i
    display block
    width 0px
    height 0px
    overflow hidden
    border 10px solid #1e1e1e
    border-bottom-color #fff
    margin 6px 0 0 12px

@media screen and (max-width: 740px)
  body
    padding 0
  
  .wrapper
    border-radius 0
    box-shadow none
    width 100%
  
  #footer
    border-radius 0
    margin 0 auto
    padding 10px
    width auto
    text-align left

  #gotop
    right 5px
    bottom 5px

@media screen and (max-width:580px)
  #header
    padding 15px 20px
    .title
      float none

    .nav
      ul
        li
          margin-left 10px
  
    p
      width 100%

  .archives-title
    padding 0 20px

  article
    padding 15px 20px

    .gallery
      margin 0 -20px 16px

    .entry
      blockquote
        margin 0 -20px 20px