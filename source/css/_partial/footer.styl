#footer
  width page-width
  margin 20px auto 0
  padding 20px 0 0
  font-size 0.875em
  color #ccc
  overflow hidden
  text-align center

  a
    color #fff
    font-style italic

#rightfix
  position fixed
  left 50%
  bottom 10px
  margin-left 360px
  width 45px
  z-index 999

  .fix_btn
    display block
    width 45px
    height 45px
    border-radius 5px
    background #1e1e1e
    opacity 0.6
    cursor pointer
    position relative
    margin-top 3px

#gotop
  i
    position absolute
    width 0px
    height 0px
    overflow hidden
    border 10px solid #1e1e1e
    border-bottom-color #fff
    top 6px
    left 12px

#gocomm
  i
    position absolute
    width 20px
    height 12px
    border 2px solid #fff
    border-left none
    border-right none
    top 15px
    left 12px
    i
      top 5px
      left 0
      height auto
      border-top 2px solid #fff
      border-bottom none

@media screen and (max-width: 740px)
  body
    padding 0
  
  .wrapper
    border-radius 0
    box-shadow none
    width 100%
  
  #footer
    border-radius 0
    margin 0 auto
    padding 10px
    width auto
    text-align left

  #rightfix
    right 5px
    bottom 5px
    left auto
    margin-left auto

@media screen and (max-width:580px)
  #header
    padding 15px 20px
    .title
      float none

    .nav
      ul
        li
          margin-left 10px
  
    p
      width 100%

  .archives-title
    padding 0 20px

  article
    padding 15px 20px

    .gallery
      margin 0 -20px 16px

    .entry
      blockquote
        margin 0 -20px 20px